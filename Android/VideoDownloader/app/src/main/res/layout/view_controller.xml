<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="right"
    android:background="@drawable/xml_background_lineargradient">

    <ImageButton
        android:id="@+id/btnDownload"
        android:layout_width="@dimen/item_control_height"
        android:layout_height="@dimen/item_control_height"
        android:layout_margin="@dimen/item_control_margin"
        android:src="@drawable/ic_control_download"
        android:hapticFeedbackEnabled="true"
        android:background="@drawable/xml_border_gray"/>

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="@dimen/item_control_height"
        android:layout_height="@dimen/item_control_height"
        android:src="@drawable/ic_control_play"
        android:background="@drawable/xml_border_gray"
        android:hapticFeedbackEnabled="true"
        android:layout_margin="@dimen/item_control_margin"/>

    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="@dimen/item_control_height"
        android:layout_height="@dimen/item_control_height"
        android:layout_margin="@dimen/item_control_margin"
        android:src="@drawable/ic_control_info"
        android:hapticFeedbackEnabled="true"
        android:background="@drawable/xml_border_gray"/>
</LinearLayout>